@{
    ViewData["Title"] = "Get All Activated Apartments";
}

<h1>Get All Activated Apartments</h1>



<table class="table table-striped mt-4">
    <thead>
        <tr class="bg-primary text-white">
            <th>Name</th>
            <th>BlockNo</th>
            <th>IsEmpty</th>
            <th>PersonsNumber</th>
            <th>FloorNo</th>
            <th>ApartmentNo</th>
            <th>IsActive</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var apart in Model)
        {
            <tr>
                <td>@apart.Name</td>
                <td>@apart.BlockNo</td>
                <td>@apart.IsEmpty</td>
                <td>@apart.PersonsNumber</td>
                <td>@apart.FloorNo</td>
                <td>@apart.ApartmentNo</td>
                <td>@apart.IsActive</td>
                <td>
                    <a asp-action="Update" asp-controller="Apartments" class="btn btn-warning" asp-route-Id="@apart.Id">Update</a>
                    <a asp-action="GetById" asp-controller="Apartments" class="btn btn-secondary" asp-route-Id="@apart.Id">Details</a>

                </td>
            </tr>
        }
    </tbody>
</table>
