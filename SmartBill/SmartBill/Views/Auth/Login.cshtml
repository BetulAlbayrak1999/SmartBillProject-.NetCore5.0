@model TokenRequestModel

@{
    ViewData["Title"] = "Login an exists person";
}

<div class="row">
    <div class="col-md-4">
        <section>
          <!--<img src="/images/login.jpg" alt="login" height="800" width="500">-->

        <form asp-action="Login" method="post">
                <h4>Use a local account to log in.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for=" TurkishIdentity"></label>
                    <input asp-for=" TurkishIdentity" class="form-control" />
                    <span asp-validation-for=" TurkishIdentity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for=" Email"></label>
                    <input asp-for=" Email" class="form-control" />
                    <span asp-validation-for=" Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for=" Password"></label>
                    <input asp-for=" Password" class="form-control" />
                    <span asp-validation-for=" Password" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" style="height:45px;width:300px">Log in</button>
                </div>
                <div class="form-group">
                    
                    <a class="nav-link  btn btn-primary" style="height:45px;width:300px" asp-controller="Auth" asp-action="Register">Register a new account</a>
                    
                </div>
            </form>
        </section>
    </div>

</div>
