@model IEnumerable<SmartBill.BusinessLogicLayer.Dtos.BillServerDto.GetAllBillServerRequestDto>

@{
    ViewData["Title"] = "Get All BillServers";
}

<h1>Get All UnActivated BillServers</h1>


<table class="table table-striped mt-4">
    <thead>
        <tr class="bg-primary text-white">
            <th>BillServer Type</th>
            <th>LastModifiedDate</th>
            <th>IsActive</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.LastModifiedDate</td>
                <td>@item.IsActive</td>
                <td>
                    <a asp-action="Update" asp-controller="BillServers" class="btn btn-warning" asp-route-Id="@item.Id">Update</a>
                    <a asp-action="GetById" asp-controller="BillServers" class="btn btn-secondary" asp-route-Id="@item.Id">Details</a>
                    <a asp-action="Activate" asp-controller="BillServers" class="btn btn-secondary" asp-route-Id="@item.Id">Activate</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}