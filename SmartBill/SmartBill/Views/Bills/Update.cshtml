@model SmartBill.BusinessLogicLayer.Dtos.BillDto.UpdateBillRequestDto

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<h1>Update an Exist Bill</h1>
<div>
   @if(ViewBag.ex != null)
   {
        @foreach(var ex in ViewBag.ex)
        {
             <span class="text-danger" >@ex</span>
        }
   }  
</div>
<div>
    <div>
        
        <script src="~/jquery/jquery.min.js"></script>
        <script src="~/jquery-validate/jquery.validate.min.js"></script>
        <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>

             <div>
                 @Html.Label("Apartment")
                @Html.DropDownListFor(x=> x.ApartmentId, (List<SelectListItem>)ViewBag.aparts, new { @class="form-control"})
                <br />
            </div>
           <div>
             @Html.Label("BillServer Type")
              @Html.DropDownListFor(x=> x.BillServerId, (List<SelectListItem>)ViewBag.billTypes, new { @class="form-control"})
             <br />                     
           </div>
           <div>
             @Html.Label("BillServer Type")
              @Html.DropDownListFor(x=> x.ApplicationUserId, (List<SelectListItem>)ViewBag.ApplicationUsers, new { @class="form-control"})
             <br />                     
           </div>
              <div class="form-group">
                <label asp-for="BillAmount" class="control-label"></label>
                <input asp-for="BillAmount" class="form-control" />
                <span asp-validation-for="BillAmount" class="text-danger"></span>
            </div>
             <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsBillPaid" /> @Html.DisplayNameFor(model => model.IsBillPaid)
                </label>
            </div>

            <button type="submit" class=" btn btn-primary d-block mt-4">Save</button>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
