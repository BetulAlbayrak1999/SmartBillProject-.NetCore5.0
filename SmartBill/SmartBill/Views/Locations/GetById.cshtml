@model SmartBill.BusinessLogicLayer.Dtos.LocationDto.GetLocationRequestDto

@{
    ViewData["Title"] = "GetById";
}

<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        <input type="hidden" asp-for="Id"/>
       
        <dt class = "col-sm-2 table-bordered">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class = "col-sm-2 table-bordered">
            @Html.DisplayNameFor(model => model.Region)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Region)
        </dd>
        <dt class = "col-sm-2 table-bordered">
            @Html.DisplayNameFor(model => model.PostalCode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PostalCode)
        </dd>
        <dt class = "col-sm-2 table-bordered">
            @Html.DisplayNameFor(model => model.Street)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Street)
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastModifiedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastModifiedDate)
        </dd>
        @if(Model.UnActivatedDate is not null)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.UnActivatedDate)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.UnActivatedDate)
            </dd>
        }
        else
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.ActivatedDate)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.ActivatedDate)
            </dd>
        }

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        
    </dl>
</div>
<div>
    <a asp-action="Delete" asp-controller="Locations" class="btn btn-danger" asp-route-Id="@Model.Id">Delete</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}