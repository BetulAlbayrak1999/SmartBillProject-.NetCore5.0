@model IEnumerable<SmartBill.BusinessLogicLayer.Dtos.PaymentDto.GetAllPaymentRequestDto>

@{
    ViewData["Title"] = "Get All Successful Payment Operations";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h1>Get All Successful Payment Operations</h1>

<table class="table table-striped mt-4">
    <thead>
        <tr class="bg-primary text-white">
            <th>CreatedDate</th>
            <th>BillId</th>
            <th>BankAccountId</th>
            <th>IsBillPaid</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CreatedDate</td>
                <td>@item.BillId</td>
                <td>@item.BankAccountId</td>
                <td>@item.IsBillPaid</td>
                <td>
                    <a asp-action="Update" asp-controller="Payments" class="btn btn-warning" asp-route-Id="@item.Id">Update</a>
                    <a asp-action="GetById" asp-controller="Payments" class="btn btn-secondary" asp-route-Id="@item.Id">Details</a>

                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>