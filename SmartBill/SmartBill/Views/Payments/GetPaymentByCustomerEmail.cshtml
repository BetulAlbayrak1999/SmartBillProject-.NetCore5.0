@model SmartBill.BusinessLogicLayer.ViewModels.PaymentVM.ListPaymentByCustomerVM

@{
    ViewData["Title"] = "ListPaymentByCustomerVM";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<h1>Enter Your Email</h1>
<div>
   @if(ViewBag.ex != null)
   {
        @foreach(var ex in ViewBag.ex)
        {
             <span class="text-danger" >@ex</span>
        }
   }  
</div>
<div>
    <div>
        
        <script src="~/jquery/jquery.min.js"></script>
        <script src="~/jquery-validate/jquery.validate.min.js"></script>
        <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="GetPaymentByCustomerEmail" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form- control"  required/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
            <button type="submit" class=" btn btn-primary d-block mt-4">Get All Payments</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
</div>
